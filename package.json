{
  "name": "aio-docs-utils",
  "displayName": "Angular.io Documentation Utilities",
  "description": "A VSCode extension providing a set of simple utilities to aid in authoring/viewing angular.io content source code.",
  "version": "0.0.3",
  "publisher": "gkalpak",
  "repository": {
    "type": "git",
    "url": "https://github.com/gkalpak/aio-docs-utils.git"
  },
  "license": "Unlicense",
  "main": "./out/extension",
  "scripts": {
    "prebuild": "npm run clean-out",
    "build": "npm run ~~build",
    "prebuild-watch": "npm run prebuild",
    "build-watch": "npm run ~~build-watch",
    "clean-out": "node --eval \"require('shelljs').rm('-rf', 'out');\"",
    "predev": "npm run build || true",
    "dev": "run-p ~~build-watch test-unit-watch",
    "postinstall": "node node_modules/vscode/bin/install",
    "lint": "tslint --project tsconfig.json",
    "pretest": "npm run build",
    "test": "npm run lint && npm run ~~test-unit && npm run ~~test-e2e",
    "pretest-e2e": "npm run build",
    "test-e2e": "npm run ~~test-e2e",
    "pretest-unit": "npm run build",
    "test-unit": "npm run ~~test-unit",
    "test-unit-watch": "watch \"npm run ~~test-unit\" out --wait=1",
    "postversion": "git push && git push --tags",
    "vsce-publish-patch": "npm run ~~vsce-prepublish patch && npm run ~~vsce-publish --",
    "vsce-publish-minor": "npm run ~~vsce-prepublish minor && npm run ~~vsce-publish --",
    "vsce-publish-major": "npm run ~~vsce-prepublish major && npm run ~~vsce-publish --",
    "~~build": "tsc --project .",
    "~~build-watch": "npm run ~~build -- --watch",
    "~~test-e2e": "node node_modules/vscode/bin/test",
    "~~test-unit": "node out/test/helpers/jasmine-runner",
    "~~vsce-prepublish": "npm test && npm version",
    "~~vsce-publish": "vsce publish --pat"
  },
  "engines": {
    "vscode": "^1.26.0"
  },
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:typescript"
  ],
  "categories": [
    "Other"
  ],
  "galleryBanner": {
    "color": "#1976d2",
    "theme": "dark"
  },
  "icon": "img/logo.png",
  "devDependencies": {
    "@types/jasmine": "^2.8.8",
    "@types/node": "^7.0.69",
    "jasmine": "^3.2.0",
    "mock-require": "^3.0.2",
    "npm-run-all": "^4.1.3",
    "shelljs": "^0.8.2",
    "source-map-support": "^0.5.8",
    "tslint": "^5.11.0",
    "tslint-jasmine-noSkipOrFocus": "^1.0.9",
    "typescript": "^2.9.2",
    "vsce": "^1.46.0",
    "vscode": "^1.1.18",
    "watch": "^1.0.2"
  },
  "private": true
}
