{
  "name": "aio-docs-utils",
  "displayName": "Angular.io Documentation Utilities",
  "description": "A VSCode extension providing a set of simple utilities to aid in authoring/viewing angular.io content source code.",
  "version": "0.1.1",
  "publisher": "gkalpak",
  "repository": {
    "type": "git",
    "url": "https://github.com/gkalpak/aio-docs-utils.git"
  },
  "license": "Unlicense",
  "main": "./out/extension",
  "scripts": {
    "prebuild": "npm run clean-out",
    "build": "npm run ~~build",
    "prebuild-watch": "npm run prebuild",
    "build-watch": "npm run ~~build-watch",
    "clean-out": "node --eval \"require('shelljs').rm('-rf', 'out/');\"",
    "predev": "npm run build || true",
    "dev": "run-p ~~build-watch ~~test-unit-watch",
    "postinstall": "node node_modules/vscode/bin/install",
    "lint": "tslint --project tsconfig.json",
    "prerelease": "npm test",
    "release": "gkcu-run \"npm version \\${*:patch}\"",
    "pretest": "npm run build",
    "test": "run-s lint ~~test-unit ~~test-e2e",
    "pretest-all-versions": "npm run pretest",
    "test-all-versions": "run-s lint ~~test-unit \"~~test-e2e earliest\" \"~~test-e2e latest\"",
    "pretest-e2e": "npm run build",
    "test-e2e": "npm run ~~test-e2e",
    "pretest-unit": "npm run build",
    "test-unit": "npm run ~~test-unit",
    "postversion": "git push && git push --tags",
    "vsce-package": "vsce package",
    "vsce-publish": "vsce publish",
    "vscode:prepublish": "npm run build",
    "~~build": "tsc --project ./",
    "~~build-watch": "npm run ~~build -- --watch",
    "~~test-e2e": "node out/test/helpers/e2e-runner \"npm run ~~test-e2e-run\"",
    "~~test-e2e-run": "node node_modules/vscode/bin/test",
    "~~test-unit": "node out/test/helpers/jasmine-runner",
    "~~test-unit-watch": "watch \"npm run ~~test-unit\" out/ --wait 1"
  },
  "engines": {
    "vscode": "^1.23.0"
  },
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:typescript"
  ],
  "categories": [
    "Other"
  ],
  "galleryBanner": {
    "color": "#1976d2",
    "theme": "dark"
  },
  "icon": "img/logo.png",
  "dependencies": {
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@gkalpak/cli-utils": "0.1.3",
    "@types/jasmine": "^2.8.8",
    "@types/node": "^10.9.4",
    "@types/shelljs": "^0.8.0",
    "jasmine": "^3.2.0",
    "mock-require": "^3.0.2",
    "npm-run-all": "^4.1.3",
    "shelljs": "^0.8.2",
    "source-map-support": "^0.5.9",
    "tslint": "^5.11.0",
    "tslint-jasmine-noSkipOrFocus": "^1.0.9",
    "typescript": "^3.0.3",
    "vsce": "^1.47.0",
    "vscode": "^1.1.21",
    "watch": "^1.0.2"
  },
  "private": true
}
