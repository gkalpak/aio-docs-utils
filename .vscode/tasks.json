// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: build",
      "group": {
        "kind": "build",
        "isDefault": true,
      },
      "type": "npm",
      "script": "build",
      "isBackground": false,
      "problemMatcher": "$ts-webpack",
    },
    {
      "label": "npm: build-prod",
      "group": "build",
      "type": "npm",
      "script": "build-prod",
      "isBackground": false,
      "problemMatcher": "$ts-webpack",
    },
    {
      "label": "npm: build-watch",
      "group": "build",
      "type": "npm",
      "script": "build-watch",
      "isBackground": true,
      "problemMatcher": "$ts-webpack-watch",
    },
  ],
}
